<%- include('partials/header') %> 

<main class="main versus">
    <div class="players-container">
        <div class="player">
            <h2>YOU PICKED</h2>
            <div class="<%= player %>--choice">
                <div class="white-bg">
                    <img src="/images/icon-<%= player %>.svg" alt="">
                </div>
            </div>
        </div>
    
        <div class="house">
            <h2>THE HOUSE PICKED</h2>
            <% if (locals.house) { %>
                <div class="<%= house %>--choice">
                    <div class="white-bg">
                        <img src="/images/icon-<%= house %>.svg" alt="">
                    </div>
                </div>
            <% } else { %>
                <div class="empty"></div>
            <% } %> 
        </div>
    </div>
    
    <div class="result">
        <% if (locals.message) { %>
            <p><%= message %></p>
            <a href="/">PLAY AGAIN</a>
        <% } %>
    </div>
</main>

<div class="rules-modal">
    <div class="rules-modal__modal">
        <header class="rules-modal__modal__header">
            <h3>RULES</h3>
            <span class="close">‚ùå</span>
        </header>
        <img src="/images/image-rules-bonus.svg" alt="">
    </div>
</div>


<%- include('partials/footer') %> 